{
  "name": "@lomray/microservice-helpers",
  "version": "1.0.0",
  "description": "Package contains helpers for easy build and test microservices based on NodeJS & inverted json.",
  "main": "index.js",
  "types": "index.d.ts",
  "keywords": [
    "js",
    "microservice",
    "helpers",
    "ijson"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lomray-Software/microservice-helpers.git"
  },
  "bugs": {
    "url": "https://github.com/Lomray-Software/microservice-helpers/issues"
  },
  "homepage": "https://github.com/Lomray-Software/microservice-helpers",
  "author": "Mikhail Yarmaliuk",
  "license": "Apache-2.0",
  "scripts": {
    "build": "rollup -c",
    "release": "npm run build && cd lib && npm publish",
    "test": "cross-env NODE_ENV=tests TS_NODE_COMPILER_OPTIONS={\\\"target\\\":\\\"es6\\\"} mocha --harmony --no-warnings  __tests__ --require ts-node/register --recursive --unhandled-rejections=strict --exit",
    "lint:check": "eslint --ext \".ts,.tsx\" \"src/**/*.{ts,tsx,*.ts,*tsx}\"",
    "lint:format": "eslint --fix --ext \".ts,.tsx\" \"src/**/*.{ts,tsx,*.ts,*tsx}\"",
    "ts:check": "tsc --project ./tsconfig.json --skipLibCheck --noemit",
    "prepare": "husky install"
  },
  "dependencies": {
    "@lomray/microservice-nodejs-lib": "^2.14.3",
    "@lomray/microservice-remote-middleware": "^1.7.4",
    "@lomray/microservices-types": "^1.7.1",
    "@lomray/typeorm-json-query": "^1.7.5",
    "@opentelemetry/api": "^1.3.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.34.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.34.0",
    "@opentelemetry/host-metrics": "^0.30.1",
    "@opentelemetry/instrumentation-express": "^0.31.3",
    "@opentelemetry/instrumentation-pg": "^0.32.0",
    "@opentelemetry/instrumentation-winston": "^0.30.1",
    "@opentelemetry/resources": "^1.8.0",
    "@opentelemetry/sdk-node": "^0.34.0",
    "@opentelemetry/semantic-conventions": "^1.8.0",
    "class-transformer": "0.4.1",
    "class-validator": "^0.13.2",
    "class-validator-jsonschema": "^3.1.1",
    "klona": "^2.0.5",
    "pg": "^8.8.0",
    "traverse": "^0.6.7",
    "typeorm": "0.2.41",
    "typeorm-extension": "1.2.1",
    "winston": "^3.8.2",
    "winston-loki": "^6.0.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@lomray/eslint-config": "^2.0.2",
    "@lomray/prettier-config": "^1.2.0",
    "@rollup/plugin-json": "^5.0.1",
    "@types/chai": "^4.3.4",
    "@types/lodash": "^4.14.189",
    "@types/mocha": "^10.0.0",
    "@types/node": "^16.9.6",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.9",
    "@types/traverse": "^0.6.32",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "chai": "^4.3.7",
    "cross-env": "^7.0.3",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "mocha": "^10.1.0",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "rewiremock": "^3.14.4",
    "rollup": "^2.79.1",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-ts": "^3.0.2",
    "semantic-release": "^19.0.5",
    "sinon": "^14.0.2",
    "sinon-chai": "^3.7.0",
    "ts-node": "10.9.1",
    "tsconfig-paths": "^4.1.0",
    "ttypescript": "^1.5.13",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "@lomray/microservices-client-api": ">=1.3.0",
    "lodash": "^4.17.21"
  },
  "bundledDependencies": [
    "tslib"
  ]
}
